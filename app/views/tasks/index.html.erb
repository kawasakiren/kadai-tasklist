<p>ログイン完了ユーザ：<%= current_user.name %></p>
<h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
        <li>
            <div><%= link_to task.user.name, task %>：<span class="text-muted">posted at <%= task.created_at %></span></div>
            <div><%= task.content %> =&gt; <%= task.status %></div>
        </li>
    <% end %>
</ul>

<%= link_to "新規タスクの追加", new_task_path %> 